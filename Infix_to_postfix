#include <stdio.h>
#include <stdlib.h>
#include <ctype.h> // For isalnum()
#include <string.h>

#define MAX 100

char stack[MAX];
int top = -1;

// --- Stack Operations ---
void push(char x) {
    if (top >= MAX - 1) {
        printf("Stack Overflow\n");
    } else {
        stack[++top] = x;
    }
}

char pop() {
    if (top == -1) {
        return -1;
    } else {
        return stack[top--];
    }
}

// --- Helper: Determine Operator Precedence ---
int priority(char x) {
    if (x == '(') return 0;
    if (x == '+' || x == '-') return 1;
    if (x == '*' || x == '/' || x == '%') return 2;
    if (x == '^') return 3;
    return 0;
}

int main() {
    char exp[MAX];
    char *e, x;
    
    printf("Enter the Infix expression: ");
    scanf("%s", exp);
    printf("Postfix Expression: ");
    
    e = exp;
    
    while (*e != '\0') {
        // Case 1: Operand (Letter or Number) -> Print immediately
        if (isalnum(*e)) {
            printf("%c", *e);
        }
        // Case 2: Opening Parenthesis -> Push
        else if (*e == '(') {
            push(*e);
        }
        // Case 3: Closing Parenthesis -> Pop until '('
        else if (*e == ')') {
            while ((x = pop()) != '(') {
                printf("%c", x);
            }
        }
        // Case 4: Operator -> Check Precedence
        else {
            while (top != -1 && priority(stack[top]) >= priority(*e)) {
                printf("%c", pop());
            }
            push(*e);
        }
        e++;
    }
    
    // Pop remaining operators from stack
    while (top != -1) {
        printf("%c", pop());
    }
    
    printf("\n");
    return 0;
}
