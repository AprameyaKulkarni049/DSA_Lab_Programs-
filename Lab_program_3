#include<stdio.h>
#include<stdlib.h>
#define max 100
int f=-1,r=-1,ele,A[max],i,n,choice;

void enqueue(int ele)
{
    if(r==max-1)
    {
        printf("\nQueue is full!!");
    }
    else
    {
        if(f==-1)
        {
            f=0;
        }
        r=r+1;
        A[r]=ele;
    }
}
void dequeue()
{
    if(f==-1|| f>r)
    {
        printf("\nQueue is empty!!");
    }
    else
    {
        printf("\nElement deleted: %d",A[f]);
        f=f+1;
    }
}
void display()
{
    for(i=f;i<=r;i++)
    {
        printf("%d ",A[i]);
    }
}
void main()
{
    printf("Enter the size of the queue: ");
    scanf("%d",&n);
    while(1)
    {
        printf("\n1.Enqueue 2.Dequeue 3.Display 4.Exit");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
                printf("\nEnter element to be inserted: ");
                scanf("%d",&ele);
                enqueue(ele);
                break;
            case 2:
                dequeue();
                break;
            case 3:
                display();
                break;
            case 4:
                printf("\nExiting...");
                exit(0);
            default:
                printf("Wrong input!!");
        }
    }
}
